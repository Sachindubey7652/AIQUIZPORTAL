<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>AI Quiz Portal</display-name>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <!-- Register Servlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Start Quiz Servlet -->
  <servlet>
    <servlet-name>StartQuizServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.StartQuizServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StartQuizServlet</servlet-name>
    <url-pattern>/StartQuizServlet</url-pattern>
  </servlet-mapping>

  <!-- Submit Quiz Servlet -->
  <servlet>
    <servlet-name>SubmitQuizServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.SubmitQuizServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SubmitQuizServlet</servlet-name>
    <url-pattern>/SubmitQuizServlet</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <!-- Profile Servlet -->
<servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.ProfileServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/user/profile</url-pattern>
</servlet-mapping>
 <!-- Update quiz Servlet -->
<servlet>
  <servlet-name>UpdateQuizServlet</servlet-name>
  <servlet-class>com.aiquizportal.controller.UpdateQuizServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>UpdateQuizServlet</servlet-name>
  <url-pattern>/UpdateQuizServlet</url-pattern>
</servlet-mapping>

<!-- Create Quiz Servlet -->
<servlet>
  <servlet-name>CreateQuizServlet</servlet-name>
  <servlet-class>com.aiquizportal.controller.CreateQuizServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>CreateQuizServlet</servlet-name>
  <url-pattern>/CreateQuizServlet</url-pattern>
</servlet-mapping>
<!-- AddQuestion Servlet -->
<servlet>
    <servlet-name>AddQuestionServlet</servlet-name>
    <servlet-class>com.aiquizportal.controller.AddQuestionServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>AddQuestionServlet</servlet-name>
    <url-pattern>/AddQuestionServlet</url-pattern>
</servlet-mapping>



  <!-- Set default welcome page -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
